<?xml version="1.0" encoding="utf-8"?>
<com.roy.turbo.launcher.Folder xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/portal_container_holo">

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.roy.turbo.launcher.CellLayout
            android:id="@+id/clFolderContent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:cacheColorHint="#ff333333"
            android:hapticFeedbackEnabled="false" />
    </ScrollView>

    <RelativeLayout
        android:id="@+id/rlFolderTitleSection"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/ivFolderLock"
            android:layout_width="@dimen/folder_lock_icon"
            android:layout_height="@dimen/folder_lock_icon"
            android:layout_alignParentEnd="true"
            android:paddingBottom="@dimen/folder_name_padding"
            android:paddingTop="@dimen/folder_name_padding"
            android:adjustViewBounds="true"
            android:contentDescription="@string/application_name"
            android:src="@drawable/folder_unlock" />

        <com.roy.turbo.launcher.view.FolderEditText
            android:id="@+id/etFolderName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:background="#00000000"
            android:fontFamily="sans-serif-condensed"
            android:gravity="center_horizontal"
            android:hint="@string/folder_hint_text"
            android:imeOptions="flagNoExtractUi"
            android:paddingBottom="@dimen/folder_name_padding"
            android:paddingTop="@dimen/folder_name_padding"
            android:singleLine="true"
            android:textColor="#ff777777"
            android:textColorHighlight="#ffCCCCCC"
            android:textCursorDrawable="@null"
            android:layout_alignParentStart="true"
            android:layout_toStartOf="@id/ivFolderLock"
            android:textSize="16sp" />
    </RelativeLayout>

</com.roy.turbo.launcher.Folder>
